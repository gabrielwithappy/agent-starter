{
    "name": "skill-hub",
    "description": "Manage skills and plugins from Git repositories",
    "version": "2.0.0",
    "author": {
        "name": "agent-starter"
    },
    "homepage": "https://github.com/gabrielwithappy/agent-starter",
    "repository": {
        "type": "git",
        "url": "https://github.com/gabrielwithappy/agent-starter"
    },
    "license": "MIT",
    "keywords": [
        "git",
        "github",
        "skill",
        "plugin",
        "installation",
        "management"
    ],
    "commands": [
        {
            "name": "install",
            "description": "Install a skill plugin from a Git repository",
            "executable": "hub.py",
            "args": ["install", "--git-url", "$ARGUMENTS"]
        },
        {
            "name": "list",
            "description": "List all installed plugins and skills",
            "executable": "hub.py",
            "args": ["list"]
        },
        {
            "name": "update",
            "description": "Update installed plugin(s) to latest version",
            "executable": "hub.py",
            "args": ["update", "--plugin-name", "$ARGUMENTS"]
        },
        {
            "name": "uninstall",
            "description": "Uninstall a plugin and its skills",
            "executable": "hub.py",
            "args": ["uninstall", "--plugin-name", "$ARGUMENTS"]
        },
        {
            "name": "browse",
            "description": "Browse all plugins in marketplaces",
            "executable": "marketplace.py",
            "args": ["list-marketplace"]
        },
        {
            "name": "search",
            "description": "Search for plugins in marketplaces",
            "executable": "marketplace.py",
            "args": ["search", "$ARGUMENTS"]
        }
    ]
}